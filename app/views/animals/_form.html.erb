<div class="container">
  <% if @animal.errors.any? %>
    <h2>The following errors prevented the animal from being saved</h2>
    <ul>
      <% @animal.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: @animal, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :name, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "name of animal" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :color, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.text_field :color, rows: 10, class: "form-control shadow rounded", placeholder: "color of animal" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :category, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.text_field :category, rows: 10, class: "form-control shadow rounded", placeholder: "category of animal" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :age, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.text_field :age, rows: 10, class: "form-control shadow rounded", placeholder: "age of animal" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <%= link_to '[ Cancel and return to animals listing ]', animals_path, class: "text-info" %>
  </div>
</div>