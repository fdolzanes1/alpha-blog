<h1>All Animals</h1>
<table>
  <tr>
    <td> Name </td>
    <td> Category </td>
    <td> Color </td>
    <td> Age </td>
  </tr>
  <% @animals.each do |animal| %>
  <tr>
    <td><%= animal.name %></td>
    <td><%= animal.category %></td>
    <td><%= animal.color %></td>
    <td><%= animal.age %></td>
    <td><%= link_to 'Show', animal_path(animal) %></td>
    <td><%= link_to 'Edit', edit_animal_path(animal) %></td>
    <td><%= link_to 'Delete', animal_path(animal), method: :delete, data: {confirm: 'Are you sure?'} %></td>
  </tr>
  <% end %>
</table>