<h1 class="text-center mt-4"><%= @person.name %>'s profile</h1>

<%= gravatar_for @person, size: 200 %>

<% if logged_in? && @person == current_person %>
  <div class="text-center mt-4">
    <%= link_to "Edit your profile", edit_person_path(@person), class: "btn btn-outline-info" %>
  </div>
<% end %>


<h3 class="text-center mt-4">Articles</h3>

<%= render 'articles/article' %>