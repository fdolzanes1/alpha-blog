<div id="page-content">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-8 mt-4 justify-content-center">
				<div class="card text-center shadow mb-5 bg-white rounded">
					<div class="card-header font-italic">
						<strong><%= @person.name %></strong>
				  	</div>
				  	<div class="card-body">
				    	<div class="card-text text-left"><%= simple_format(@person.email) %></div>
				    	<%= link_to "Edit", edit_person_path(@person), class: "btn btn-outline-info" %>
				    	<%= link_to "Delete", person_path(@person), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
				  	</div>
				  	<div class="card-footer text-muted">
				    	<small>Created <%= time_ago_in_words(@person.created_at) %> ago, 
				    	edited <%= time_ago_in_words(@person.updated_at) %> ago</small>
				  	</div>
				</div>
				<%= link_to '[ Cancel and return to people listing ]', people_path, class: "text-info" %>
			</div>
		</div>
  	</div>
</div> 
