<h1>Create a new person</h1>
<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>
<%= form_with scope: :person, url: people_path, local: true do |f| %>
  <%= f.label :name%>
  <%= f.text_field :name%>
  <br/><br/>
  <%= f.label :email%>
  <%= f.text_field :email%>
  <br/><br/>
  <%= f.label :age%>
  <%= f.text_field :age%>
  <br/><br/>
  <%= f.submit %>
<% end %>