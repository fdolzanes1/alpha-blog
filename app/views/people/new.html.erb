<h1>Create a new person</h1>
<% if @person.errors.any? %>
  <h3>The following errors prevented the article from being saved</h3>
  <ul>
    <% @person.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with scope: :person, url: people_path, local: true do |f| %>
  <%= f.label :name%>
  <%= f.text_field :name%>
  <br/><br/>
  <%= f.label :email%>
  <%= f.text_field :email%>
  <br/><br/>
  <%= f.label :age%>
  <%= f.text_field :age%>
  <br/><br/>
  <%= f.submit %>
  <%= link_to 'Back', people_path %>
<% end %>
