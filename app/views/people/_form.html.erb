<div class="container">
  <% if @person.errors.any? %>
    <h3>The following errors prevented the person from being saved</h3>
    <ul>
      <% @person.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="row justify-content-center">
    <div class="col-10">
      
      <%= form_with(model: @person, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :name, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "name" %>
          </div>
        </div>
        <br/>
        <div class="form-group row">
          <%= f.label :email, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :email, class: "form-control shadow rounded", placeholder: "email" %>
          </div>
        </div>
        <br/>
        <div class="form-group row">
          <%= f.label :age, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :age, class: "form-control shadow rounded", placeholder: "age" %>
          </div>
        </div>
        <br/>
        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <%= link_to '[ Cancel and return to people listing ]', people_path, class: "text-info" %>
  </div>
</div>